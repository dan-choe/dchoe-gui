{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "rxjs-add": {
            "options": [{
            "allowElsewhere": false,
            "allowUnused": false,
            "file": "./src/rxjs-imports.ts"
            }],
            "severity": "error"
        }
    }
}
